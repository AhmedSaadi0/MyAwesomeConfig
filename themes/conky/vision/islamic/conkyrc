conky.config = {

-------------------------------------
--  Generic Settings
-------------------------------------
background=true,
update_interval=1,
double_buffer=true,
no_buffers=true,
imlib_cache_size=0,

draw_shades=false,
draw_outline=false,
draw_borders=false,


-------------------------------------
--  Window Specifications
-------------------------------------
gap_x=600,
gap_y=180,

alignment="middle_middle",

minimum_height=400,
minimum_width=600,

own_window=true,
own_window_type="override",
own_window_transparent=true,
own_window_hints="undecorated,below,sticky,skip_taskbar,skip_pager",

own_window_argb_visual=true,
own_window_argb_value=0,


-------------------------------------
--  Text Settings
-------------------------------------
use_xft=true,
xftalpha=1,
font="Droid Sans:size=10",
text_buffer_size=256,
override_utf8_locale=true,


-------------------------------------
--  Color Scheme
-------------------------------------
default_color='f1dc6e',

color0='f1dc6e', -- Hours
color6='#60c29f', -- Minuts
color1='ff5558', -- date
color2='f1dc6e', -- current temperature
color3='7aa2f7', -- high tempratures
color4='b83d3f', -- low tempratures
color5='f1dc6e', -- days


-------------------------------------
--  Icon Sources
-------------------------------------
template0='~/.config/awesome/themes/conky/vision/islamic/conky-vision/#f1dc6e__32',  --  today
template1='~/.config/awesome/themes/conky/vision/islamic/conky-vision/#f1dc6e__32',  --  +1day
template2='~/.config/awesome/themes/conky/vision/islamic/conky-vision/#f1dc6e__32',  --  +2days
template3='~/.config/awesome/themes/conky/vision/islamic/conky-vision/#f1dc6e__32',  --  +3days
template4='~/.config/awesome/themes/conky/vision/islamic/conky-vision/#f1dc6e__32',  --  +4days


-------------------------------------
--  API Key
-------------------------------------
template6="95c9a7df71aaf7550384c10029c20405",


-------------------------------------
--  City ID
-------------------------------------
template7="71137",


-------------------------------------
--  Temp Unit (default, metric, imperial)
-------------------------------------
template8="metric",


-------------------------------------
--  Locale (e.g. "es_ES.UTF-8")
--  Leave empty for default
-------------------------------------
template9=""

}


---------------------------------------------------
---------------------------------------------------


conky.text = [[
\
\
\
\
${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/get_weather ${template6} ${template7} ${template8} ${template9}}\
\
\
\
\
${font Poiret One:weight=Light:size=96}${color0}\
${alignc}${time %H} ${color6}${alignc}${time %M}\
${font}${color}
\
\
\
\
${font Poiret One:weight=Light:size=28}${color1}\
${voffset 30}\
${alignc}${execi 300 LANG=${template9} LC_TIME=${template9} date +"%A, %B %d"}\
${font}${color}
\
\
\
\
${font Poiret One:size=18}${color2}\
${voffset 36}\
${goto 60}${execi 300 jq .main.temp ~/.cache/conky-vision/weather.json | awk '{print int($1+0.5)}' # round num}°\
${font}${color}\
\
\
\
\
${font Poiret One:size=12}${color3}\
${goto 164}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'max' '.main.temp' '1'}°\
${goto 272}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'max' '.main.temp' '2'}°\
${goto 378}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'max' '.main.temp' '3'}°\
${goto 484}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'max' '.main.temp' '4'}°\
${font}${color}\
\
\
\
\
${font Poiret One:size=12}${color4}\
${voffset 52}\
${goto 218}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'min' '.main.temp' '1'}°\
${goto 324}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'min' '.main.temp' '2'}°\
${goto 430}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'min' '.main.temp' '3'}°\
${goto 536}${execi 300 ~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'min' '.main.temp' '4'}°\
${font}${color}
\
\
\
\
${font Poiret One:size=14}${color5}\
${voffset 20}\
${goto 76}${execi 300 LANG=${template9} LC_TIME=${template9} date +%a | gawk '{print toupper($0);}'}\
${goto 182}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +1day +%a | gawk '{print toupper($0);}'}\
${goto 288}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +2days +%a | gawk '{print toupper($0);}'}\
${goto 394}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +3days +%a | gawk '{print toupper($0);}'}\
${goto 500}${execi 300 LANG=${template9} LC_TIME=${template9} date -d +4days +%a | gawk '{print toupper($0);}'}\
${font}${color}
\
\
\
\
${execi 300 cp -f ${template0}/$(jq .weather[0].id ~/.cache/conky-vision/weather.json).svg ~/.cache/conky-vision/current.svg}${image ~/.cache/conky-vision/current.svg -p 72,266 -s 32x32}\
${execi 300 cp -f ${template1}/$(~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'first' '.weather[0].id' '1').svg ~/.cache/conky-vision/forecast-1.svg}${image ~/.cache/conky-vision/forecast-1.svg -p 178,266 -s 32x32}\
${execi 300 cp -f ${template2}/$(~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'first' '.weather[0].id' '2').svg ~/.cache/conky-vision/forecast-2.svg}${image ~/.cache/conky-vision/forecast-2.svg -p 284,266 -s 32x32}\
${execi 300 cp -f ${template3}/$(~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'first' '.weather[0].id' '3').svg ~/.cache/conky-vision/forecast-3.svg}${image ~/.cache/conky-vision/forecast-3.svg -p 390,266 -s 32x32}\
${execi 300 cp -f ${template4}/$(~/.config/awesome/themes/conky/vision/islamic/conky-vision/parse_weather 'first' '.weather[0].id' '4').svg ~/.cache/conky-vision/forecast-4.svg}${image ~/.cache/conky-vision/forecast-4.svg -p 496,266 -s 32x32}\
]]
